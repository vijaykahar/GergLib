{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "es7", "dom"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"],
      "component/*": ["./src/component/*"],
      "store/*": ["./src/store/*"],
      "config/*": ["./src/config/*"],
      "icon/*": ["./src/icon/*"]
    },
    "strictNullChecks": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
